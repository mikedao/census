<div class="container text-center">
  <div class="row">

    <div class="col-md-4">
    </div>

    <div class="col-md-4 well">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), multipart: true) do |f| %>
        <%= devise_error_messages! %>

        <%= render 'shared/registration_fields', f: f, cohorts: @cohorts %>

        <div class="form-group">
          <div class="field">
            <%= check_box("Armstrong", "Armstrong", id: "armstrong") %>
            <%= label_tag "Armstrong" %>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="actions">
            <%= f.submit "Sign up", class:"btn btn-primary btn-lg btn-block" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
