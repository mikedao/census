<div class='navbar navbar-inverse navbar-static-top' role='navigation'>
  <div class='container-fluid'>
    <div class='navbar-header'>
      <%= link_to 'Census', users_path, class: 'navbar-brand' %>
    </div>
    <ul class='nav navbar-nav navbar-right'>
      <% if user_is_admin? %>
        <li class="<%= 'active' if current_page?(admin_dashboard_path) %>"><%= link_to "Go to Dashboard", admin_dashboard_path %></li>
        <li class="<%= 'active' if current_page?(new_invitation_path) %>"><%= link_to "Invite Users", new_invitation_path %></li>
      <% end %>

      <% if user_signed_in? %>
        <li class="<%= 'active' if current_page?(users_path) %>"><%= link_to "Community", users_path %></li>
        <li class="<%= 'active' if current_page?(user_path(current_user)) %>"><%= link_to "My Account", user_path(current_user) %></li>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'Login', new_user_session_path %></li>
      <% end %>
    </ul>
  </div>
</div>
